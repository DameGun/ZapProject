@if (!User.Identity.IsAuthenticated)
{

	<a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
		<i class="bi bi-box-arrow-in-right"></i> Войти
	</a>
	<span style="padding: 5px;"></span>

	<a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
		<i class="bi bi-person-plus"></i> Регистрация
	</a>
}
else
{
	<div class="dropdown">
		<a class="btn btn-outline-success dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
			<i class="bi bi-person-badge"></i> @User.Identity.Name
		</a>

		<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
			<li>
				<a class="dropdown-item" asp-controller="Orders" asp-action="Index">
					<i class="bi bi-list"></i> Заказы
				</a>
			</li>
			@if (User.IsInRole("user"))
			{
				<li>
					<a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">
						<i class="bi bi-bag-heart"></i> Избранные товары
					</a>
				</li>
				<li>
					<a class="dropdown-item" asp-controller="Dashboard" asp-action="EditUserProfile">
						<i class="bi bi-pencil-square"></i> Редактировать профиль
					</a>
				</li>
			}
			else
			{
				<li>
					<a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">
						<i class="bi bi-gear"></i> Админ-панель
					</a>
				</li>
			}

		</ul>
	</div>

	<span style="padding: 5px;"></span>
	<form asp-controller="Account" asp-action="Logout">
		<button class="btn btn-outline-danger my-2 my-sm-0">
			<i class="bi bi-box-arrow-in-right"></i> Выйти
		</button>
	</form>
}
