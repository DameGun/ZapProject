@using ZapProject.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Создать аккаунт</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form class="pb-3" method="post" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Пароль</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="my-3">
                        <a asp-action="Login">Уже имеете аккаунт? Войти сейчас.</a>
                    </div>
                    
                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Регистрация" />
                        <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Index">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>