@model FoodItemsViewModel

@{
	ViewData["Title"] = "Каталог";
}

<div class="container py-5">
	<div class="row">
		<div class="col-lg-3">
			<div class="sticky-top" style="top: 60px;">
				<h1 class="h2 pb-4">Категории</h1>
				<ul class="list-unstyled templatemo-accordion">
					<li class="pb-3">
						@if (Model.currCategory == "Proteins")
						{
							<a class="btn btn-dark" asp-controller="FoodItems" asp-action="Index" asp-route-category="Proteins">
								Протеин
							</a>
						}
						else
						{
							<a class="btn btn-outline-dark" asp-controller="FoodItems" asp-action="Index" asp-route-category="Proteins">
								Протеин
							</a>
						}
					</li>
					<li class="pb-3">
						@if (Model.currCategory == "Vitamins")
						{
							<a class="btn btn-dark" asp-controller="FoodItems" asp-action="Index" asp-route-category="Vitamins">
								Витамины
							</a>
						}
						else
						{
							<a class="btn btn-outline-dark" asp-controller="FoodItems" asp-action="Index" asp-route-category="Vitamins">
								Витамины
							</a>
						}						
					</li>
					<li class="pb-3">
						@if (Model.currCategory == "PreWorkouts")
						{
							<a class="btn btn-dark" asp-controller="FoodItems" asp-action="Index" asp-route-category="PreWorkouts">
								Предтренировочные комплексы
							</a>
						}
						else
						{
							<a class="btn btn-outline-dark" asp-controller="FoodItems" asp-action="Index" asp-route-category="PreWorkouts">
								Предтренировочные комплексы
							</a>
						}
					</li>
					<li class="pb-3">
						@if (Model.currCategory == "HealthyFood")
						{
							<a class="btn btn-dark" asp-controller="FoodItems" asp-action="Index" asp-route-category="HealthyFood">
								Здоровое питание
							</a>
						}
						else
						{
							<a class="btn btn-outline-dark" asp-controller="FoodItems" asp-action="Index" asp-route-category="HealthyFood">
								Здоровое питание
							</a>
						}
					</li>
				</ul>
			</div>

		</div>

		<div class="col-lg-9">
			<div class="row">
				<div class="col">
					<ul class="list-inline shop-top-menu pb-3 pt-1">
						<li class="list-inline-item">
							@if (!String.IsNullOrEmpty(ViewBag.SearchString))
							{
								<h3 class="mt-3">Результаты поиска по запросу: "@ViewBag.SearchString"</h3>
							}
							else
							{
								<a class="h3 text-dark text-decoration-none mr-3">Каталог</a>
							}							
						</li>
					</ul>
				</div>
			</div>
			<div class="row">
				@foreach (var item in Model.AllItems)
				{
					<partial name="FoodItemLayout" model="item" />
				}
			</div>
		</div>

	</div>
</div>